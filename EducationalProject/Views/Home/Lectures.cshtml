@model IEnumerable<EducationalProject.Models.Lecture>
@{
    ViewBag.Title = "Lectures";
}

<h2>Lectures</h2>

@{
    int counter = 1;
    foreach (var lecture in Model)
    {
        @:Lecture #
        @counter
        <br/>
    
        @:Назва: @lecture.Name   
        <br />
        @:Автор: @lecture.Author
        <br />
        @:Опис:  @lecture.Description
        <br />
        @:Дата створення:  @lecture.CreatedOn
        <br />

    }
}